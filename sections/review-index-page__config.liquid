<div class="reviewsIndexPage__mainContainer">

  <h1>{{section.settings.page__title}}</h1>
  <p class="reviewsIndexPage__copy">{{section.settings.page__description}}</p>

  <div class="reviewsIndexPage__widgetContainer">
    
    <script type="text/javascript"> (function e(){var e=document.createElement("script");e.type="text/javascript",e.async=!0, e.src="//staticw2.yotpo.com/J53RkYbPOdnX4Qf11g1mqLGvdfuGkko5udAy5CuG/widget.js";var t=document.getElementsByTagName("script")[0]; t.parentNode.insertBefore(e,t)})(); </script>
    <div id='yotpo-testimonials-custom-tab'></div>
    
  </div>

  <div class="reviewsIndexPage__reviewsCarousel">
    
    <img id="quote_img"src="https://cdn.shopify.com/s/files/1/3012/3948/files/quotes.svg?v=1615312885">
    
    <div class="reviewsCarousel__container">
      {%for block in section.blocks%}
      {%if block.type == "text"%}
      {%if block.settings.review__quote != blank%}
      <div class="reviewsCarousel__review">
        <h3>{{block.settings.review__quote}}</h3>
        <div class="reviewsCarousel__authorInfo">
          <img src="{{block.settings.review__picture | img_url: "master"}}">
          <div class="authorInfo__text">
            <p>{{block.settings.review__author}}</p>
            <a href="{{block.settings.review__authorLink}}">{{block.settings.review__authorHandle}}</a>
          </div>
        </div>
      </div>
      {%endif%}
      {%endif%}
      {%endfor%}  
    </div>
  </div>
  
  
  
    <div class="reviewsIndexPage__blockSeo">
    {%for block in section.blocks %}
    {%if block.type == "seo_text"%}
    
      {%if block.settings.title_1 != blank%}
      <h2>{{block.settings.title_1}}</h2>
      {%endif%}
      {%if block.settings.text_1 != blank%}
      <p>{{block.settings.text_1}}</p>
      {%endif%}
      <div read-more-content>
        {%if block.settings.title_2 != blank or block.settings.text_2 != blank%}
        <div read-more-link>Read more</div>
        {%endif%}
        {%if block.settings.title_2 != blank%}
        <h2>{{block.settings.title_2}}</h2>
        {%endif%}
        {%if block.settings.text_2 != blank%}
        <p>{{block.settings.text_2}}</p>
        {%endif%}
        {%if block.settings.title_3 != blank%}
        <h2>{{block.settings.title_3}}</h2>
        {%endif%}
        {%if block.settings.text_3 != blank%}
        <p>{{block.settings.text_3}}</p>
        {%endif%}
        {%if block.settings.title_4 != blank%}
        <h2>{{block.settings.title_4}}</h2>
        {%endif%}
        {%if block.settings.text_4 != blank%}
        <p>{{block.settings.text_4}}</p>
        {%endif%}
        {%if block.settings.title_5 != blank%}
        <h2>{{block.settings.title_5}}</h2>
        {%endif%}
        {%if block.settings.text_5 != blank%}
        <p>{{block.settings.text_5}}</p>
        {%endif%}
      </div>     
    {%break%}
    {%endif%}
    {%endfor%}
  </div>
</div>

<script>
  $(document).ready(function(){
    $(".reviewsCarousel__container").slick({
      dots:true,
      arrows:false,
      centerMode: true,
      centerPadding: '0px',
      variableWidth: true,
      slidesToShow: 3,
      slidesToScroll:1,      
      infinte: true,
      speed: 300,
      responsive:[
        {
          breakpoint: 1023,
          settings:{
            variableWidth: false,
            slidesToShow: 1,
            slidesToScroll: 1,
            speed: 300,
            touchThreshold: 15,
            centerMode:false            
          }
        }
      
      ]
    })  
  })

</script>

