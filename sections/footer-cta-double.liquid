<div class="footer-double-cta">
  <div class="cta-container">
  	{%for block in section.blocks%}
    <div class="cta-card">
      <h3>{{block.settings.title}}</h3>
      {% if block.settings.cta_txt == 'REFER A FRIEND' %}
      {% assign newurl = "https://" | append: request.host | append: request.path | append: '?tkbl_expand=true' %}
      <a href="{{newurl}}">{{ block.settings.cta_txt }}</a>
      {% else %}
      <a href="{{block.settings.cta_url}}">{{block.settings.cta_txt}}</a>
      {% endif %}
    </div>
    {%endfor%}
  </div>
</div>
{% schema %}
  {
    "name": "Footer Double CTA",
    "settings": [],
	"max_blocks":2,
	"blocks":[
      {
      "type":"text",
      "name":"CTA",
      "settings":[
          {
          "type":"textarea",
          "id":"title",
          "label":"Title"
          },
          {
          "type":"text",
          "id":"cta_txt",
          "label":"CTA Text"
          },
          {
          "type":"url",
          "id":"cta_url",
          "label":"CTA URL"
          }
		]
      }
	]
  }
{% endschema %}