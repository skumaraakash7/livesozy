	{
		"name": "Image with CTA",
		"settings": [
			{
				"type": "image_picker",
				"id": "image",
				"label": "Image",
				"info": "2000x900 jpg recommended"
			},
			{
				"type": "checkbox",
				"id": "desktop_enable",
				"label": "Show on desktop",
				"default": true
			},
			{
				"type": "image_picker",
				"id": "image-mobile",
				"label": "Image (mobile)",
				"info": "700x1000 jpg recommended"
			},
			{
				"type": "checkbox",
				"id": "mobile_enable",
				"label": "Show on mobile",
				"default": true
			},
			{
				"type": "text",
				"id": "pre-heading",
				"label": "Pre heading"
			},
			{
				"type": "text",
				"id": "heading",
				"label": "Heading"
			},
			{
				"type": "url",
				"id": "button-link",
				"label": "Link"
			},
			{
				"id": "button-text",
