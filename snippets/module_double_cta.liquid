			top: 50%;
			right: 0;
			transform: translate(0, -50%);
		{% elsif section.settings.text_position-1 == "bottom-left" %}
			bottom: 0;
			left: 0;
		{% elsif section.settings.text_position-1 == "bottom-center" %}
			bottom: 0;
			left: 50%;
			transform: translate(-50%, 0);
		{% elsif section.settings.text_position-1 == "bottom-right" %}
			bottom: 0;
			right: 0;
		{% endif %}
	}
	
	.module-{{ section.id }} .homepage-double-cta-left p.custom-module-pretitle,
	.module-{{ section.id }} .homepage-double-cta-left h2.custom-module-title {
		color: {{ section.settings.text-color-1 }};
		text-align: {{ section.settings.text_alignment-1 }};
	}
	
	.module-{{ section.id }}  .homepage-double-cta-left a.custom-module-button {
		color: {{ section.settings.button-text-color-1 }};
		background-color: {{ section.settings.button-color-1 }};
	}
	
