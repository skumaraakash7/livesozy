		padding-right: {{ section.settings.text_padding_right-1 }}px;
		text-align: {{ section.settings.text_alignment-1 }};
		
		{% if section.settings.text_position-1 == "top-left" %}
			top: 0;
			left: 0;
		{% elsif section.settings.text_position-1 == "top-center" %}
