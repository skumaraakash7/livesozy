<!-- snippets/module_double_cta.liquid -->

<section class="homepage-double-cta index-section no-fouc module-{{ section.id }}" data-section-id="{{ section.id }}">

	<div class="homepage-double-cta-left">
		{% if section.settings.button-link-1 != blank  %}
			<a href="{{ section.settings.button-link-1 }}">
		{% endif %}
			<div class="custom-module-content">
				{% if section.settings.heading-1 != blank %}
					<h2 class="custom-module-title">{{ section.settings.heading-1 | escape }}</h2>
				{% endif %}
			
				{% if section.settings.button-link-1 != blank and section.settings.button-text-1 != blank %}
					<p>
						<a class="custom-module-button" href="{{ section.settings.button-link-1 }}">
							{{ section.settings.button-text-1 | escape }}
						</a>
					</p>
				{% endif %}
			</div>
		{% if section.settings.button-link-1 != blank  %}
			</a>
		{% endif %}
		
		<div class="banner-image-desktop mobile-hidden tablet-hidden">
			{% if section.settings.button-link-1 != blank  %}
				<a href="{{ section.settings.button-link }}">
			{% endif %}
				{% if section.settings.image-1 %}
					<img class="lazy" data-src="{{ section.settings.image-1.src | img_url: '1200x900', crop: 'center' }}" class="fullwidth" alt="{{ section.settings.image-1.alt }}" />
				{% endif %}
			{% if section.settings.button-link-1 != blank  %}
				</a>
			{% endif %}
		</div>
		<div class="banner-image-mobile desktop-hidden">
			{% if section.settings.button-link-1 != blank  %}
				<a href="{{ section.settings.button-link-1 }}">
			{% endif %}
				{% if section.settings.image-mobile-1 %}
					<img class="lazy" data-src="{{ section.settings.image-mobile-1.src | img_url: '700x700', crop: 'center' }}" class="fullwidth" alt="{{ section.settings.image-mobile-1.alt }}"/>
				{% endif %}
			{% if section.settings.button-link-1 != blank  %}
				</a>
			{% endif %}
		</div>
	</div>
	
	<div class="homepage-double-cta-right">
		{% if section.settings.button-link-2 != blank  %}
			<a href="{{ section.settings.button-link-2 }}">
		{% endif %}
			<div class="custom-module-content">
				{% if section.settings.heading-2 != blank %}
					<h2 class="custom-module-title">{{ section.settings.heading-2 | escape }}</h2>
				{% endif %}
			
				{% if section.settings.button-link-2 != blank and section.settings.button-text-2 != blank %}
					<p>
						<a class="custom-module-button" href="{{ section.settings.button-link-2 }}">
							{{ section.settings.button-text-2 | escape }}
						</a>
					</p>
				{% endif %}
			</div>
		{% if section.settings.button-link-2 != blank  %}
			</a>
		{% endif %}
		
		<div class="banner-image-desktop mobile-hidden tablet-hidden">
			{% if section.settings.button-link-2 != blank  %}
				<a href="{{ section.settings.button-link-2 }}">
			{% endif %}
				{% if section.settings.image-2 %}
					<img src="{{ section.settings.image-2.src | img_url: '1200x900', crop: 'center' }}" class="fullwidth" alt="{{ section.settings.image-2.alt }}" />
				{% endif %}
			{% if section.settings.button-link-2 != blank  %}
				</a>
			{% endif %}
		</div>
		<div class="banner-image-mobile desktop-hidden">
			{% if section.settings.button-link-2 != blank  %}
				<a href="{{ section.settings.button-link-2 }}">
			{% endif %}
				{% if section.settings.image-mobile-2 %}
					<img src="{{ section.settings.image-mobile-2.src | img_url: '700x700', crop: 'center' }}" class="fullwidth" alt="{{ section.settings.image-mobile-2.alt }}"/>
				{% endif %}
			{% if section.settings.button-link-2 != blank  %}
				</a>
			{% endif %}
		</div>
	</div>
	
</section>
<div class="clear"></div>

